{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "lint": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "__tests__/**/*.ts", "__tests__/**/*.tsx"]
    },
    "publish": {
      "dependsOn": ["build", "test", "lint"]
    }
  }
}
